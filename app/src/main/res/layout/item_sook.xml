<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:background="#1E1E41"
    android:gravity="center_vertical"
    android:layout_height="160dp">
    <ImageView
        android:id="@+id/imag_soon"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_108" />
    <LinearLayout
        android:layout_toRightOf="@id/imag_soon"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_weight="1"
            android:id="@+id/text_moviename"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:text="导演:"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/text_sooktime"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12"
            android:text="主演:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/text_num"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:text="评分:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bit_yuyue"

                android:text="预约"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:background="#E62C67"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_22" />
            <Button
                android:visibility="gone"
                android:id="@+id/bit_yiyuyue"
                android:text="已预约"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:background="#EEE154"
                android:layout_width="@dimen/dp_45"
                android:layout_height="22dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
