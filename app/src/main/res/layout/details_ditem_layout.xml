<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48">

        <com.facebook.drawee.view.SimpleDraweeView
            app:roundAsCircle="true"
            app:placeholderImage="@mipmap/ic_launcher"
            android:id="@+id/imag_view"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/text_cimema_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_19" />
        <TextView
            android:id="@+id/text_cimema_time"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_19" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:id="@+id/text_cimema_pinlu"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_19" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_10">

            <ImageView
                android:id="@+id/imag_true"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@mipmap/dianzan_b"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imag_false"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@mipmap/dianzan_a" />
        </RelativeLayout>
        <TextView
            android:id="@+id/text_cinema_num_ran"
            android:textColor="#fff"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="#fff"
            android:id="@+id/text_cinema_num"
            android:textSize="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15" />
    </LinearLayout>
    <LinearLayout
        android:background="#C7BEBE"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1">

    </LinearLayout>

</LinearLayout>
